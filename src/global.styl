@import './variables'

body {
  background-color #fafafa
  padding 0.3rem 0.36rem
  margin 0
  font-size 0.28rem
  line-height 0.4rem
}

a {
  text-decoration none
}

* {
  box-sizing border-box
}

.radio {
  color title-dark-color
  font-size 0.28rem

  input[type=radio] {
    width 0.36rem
    height 0.36rem
  }
}

p, span {
  max-height 1000rem
  margin 0
}

.long-text {
  letter-spacing 0.01rem
  color normal-text-color
  font-size 0.24rem
  line-height 0.4rem
  font-weight 400
}



.circular {
  animation: rotate 2s linear infinite;
  height: 0.4rem;
  transform-origin: center center;
  width: 0.4rem;
  display: inline-block;
  vertical-align: center;
  margin-right 0.12rem
}

.cover-layer {
  position: fixed;
  z-index: 999;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  opacity 1;
  background-color: rgba(#010101, 40%);
  display: flex;
  align-items: center;
  justify-content: center;
  &.hidden {
    z-index: -100;
    opacity 0;
  }
  .modal-container {
    width: 5.9rem;
    padding: 0.6rem 0.52rem;
    background-color: #ffffff;
    border-radius: 0.08rem;
    text-align: center;
    .modal-icon {
      width: 1rem;
      height: 1rem;
    }
    .modal-body {
      font-size: 0.28rem;
      line-height: 0.36rem;
      color: #37454F;
      margin: 0.7rem 0;
      text-align: left;
    }
    .modal-footer {
      display: flex;
      justify-content: space-between;
      .btn {
        width: calc((100% - 0.54rem) / 2);
        height: 0.8rem;
        line-height: 0.8rem;
      }
    }
  }
}

.path {
  stroke #ffffff
  stroke-dasharray: 1, 200;
  stroke-dashoffset: 0;
  animation: dash 1.5s ease-in-out infinite;
  stroke-linecap: round;
}

@keyframes rotate {
  100% {
    transform: rotate(360deg);
  }
}

@keyframes dash {
  0% {
    stroke-dasharray: 1, 200;
    stroke-dashoffset: 0;
  }
  50% {
    stroke-dasharray: 89, 200;
    stroke-dashoffset: -0.35rem;
  }

  100% {
    stroke-dasharray: 89, 200;
    stroke-dashoffset: -1.24rem;
  }
}
@import './variables'

body {
  background-color #fafafa
  padding 0.3rem 0.36rem
  margin 0
  font-size 0.28rem
  line-height 0.4rem
}

a {
  text-decoration none
}

* {
  box-sizing border-box
}

p, span {
  max-height 1000rem
  margin 0
}

.long-text {
  letter-spacing 0.01rem
  color normal-text-color
  font-size 0.24rem
  line-height 0.4rem
  font-weight 400
}

.cover-layer {
  position: fixed;
  z-index: 999;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  opacity 1;
  background-color: rgba(#010101, 40%);
  display: flex;
  align-items: center;
  justify-content: center;
  &.hidden {
    z-index: -100;
    opacity 0;
  }
  .modal-container {
    width: 5.9rem;
    padding: 0.6rem 0.52rem;
    background-color: #ffffff;
    border-radius: 0.08rem;
    text-align: center;
    .modal-icon {
      width: 1rem;
      height: 1rem;
    }
    .modal-body {
      font-size: 0.28rem;
      line-height: 0.36rem;
      color: #37454F;
      margin: 0.7rem 0;
      text-align: left;
    }
    .modal-footer {
      display: flex;
      justify-content: space-between;
      .btn {
        width: calc((100% - 0.54rem) / 2);
        height: 0.8rem;
        line-height: 0.8rem;
      }
    }
  }
}
